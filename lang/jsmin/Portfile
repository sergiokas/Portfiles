PortSystem          1.0

name                jsmin
version             2012-04-15
categories          lang
maintainers         sergiokas.com:dev openmaintainer
platforms           darwin
supported_archs     noarch

description         JavaScript Minifier Tool

long_description    Original Douglas Crockford's JavaScript Minifier Tool

homepage            http://www.crockford.com/javascript/jsmin.html
fetch.type          git
git.url             https://github.com/douglascrockford/JSMin.git
git.branch          5ca277ea45

use_configure       no

build.cmd			gcc
build.args			-Wall -o jsmin
build.target		jsmin.c

destroot {
    xinstall ${worksrcpath}/jsmin ${destroot}${prefix}/bin/jsmin
}